{
  "compilerOptions": {
    "experimentalDecorators": true, //开启装饰器@ （修饰器本质就是编译时执行的函数）
    "strict": true,
    // 指定生成哪个模块系统代码
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",//编译目标平台
    "allowJs":true,//允许编译javascript文件
    "noImplicitAny": false, // 在表达式和声明上有隐含的'any'类型时报错。
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ]
  },
  "include": ["./**/*.ts"]
}

